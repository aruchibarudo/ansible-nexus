[Unit]
Description=nexus service
After=network.target
  
[Service]
Type=forking
LimitNOFILE=65536
ExecStart={{ nexus_install_dir }}/nexus/nexus/bin/nexus start
ExecStop={{ nexus_install_dir }}/nexus/nexus/bin/nexus stop
User={{ nexus_user }}
Restart=on-abort
TimeoutSec=600
  
[Install]
WantedBy=multi-user.target